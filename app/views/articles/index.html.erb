<h1>文章列表</h1>
<%= link_to '新建文章',new_article_url %>
<table border="1">
  <tr>
    <th>序号</th>
    <th>标题</th>
    <th>内容</th>
    <th colspan="3"> 操作</th>
  </tr>
  <% @articles.each do |article| %>


  <tr>
    <td><%= article.id %></td>
    <td><%= article.title %></td>
    <td><%= article.text %></td>
    <td><%= link_to '查看',article_path(article) %></td>
    <td><%= link_to '修改',edit_article_path(article) %></td>
    <td><%= link_to '删除',article_path(article),method: :delete,data:{confirm:'你确定吗?'} %></td>
  </tr>
  <% end  %>
</table>