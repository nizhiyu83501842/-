<%= form_with model: [@article, @article.comments.build], local: true do |form| %>
    <p>
      <%= form.label :评论人 %>
      <%= form.text_field :commenter %><br>
    </p>
    <p>
      <%= form.label :评论内容 %>
      <%= form.text_area :body %>
    </p>
    <p>
      <%= form.submit %>
    </p>
<% end %>